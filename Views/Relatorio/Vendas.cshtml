@model RelatorioModel

<h2>Vendas por Período</h2>

<form asp-controller="Relatorio" asp-action="Vendas">
    <div class="form-group">
        <label>Período</label>
        <input asp-for="DataDe" type="date" class="form-control" />
    </div>
    <div class="form-group">
        <input asp-for="DataAte" type="date" class="form-control" />
    </div>
    <br />
    <button class="btn btn-block btn-default" type="button" onclick="Voltar()">Voltar</button>
    <button type="submit" class="btn btn-block btn-success">Pesquisar</button>
    <br />
</form>

<br />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Data</th>
            <th>Vendedor</th>
            <th>Cliente</th>
            <th>Lucro</th>
            <th>Total</th>
        </tr>
    </thead>

    <tbody>
        @{
            try
            {
                foreach (var item in (List<VendaModel>)ViewBag.ListaVendas)
                {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Data</td>
                    <td>@item.Vendedor_Id</td>
                    <td>@item.Cliente_Id</td>
                    <td>R$ @item.Lucro</td>
                    <td>R$ @item.Total</td>
                </tr>

                }
            }
            catch { }
        }
    </tbody>
</table>

<script>
    function Voltar() {
        window.location.href = '../../Relatorio/Index';
    }
</script>